{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/src/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/backend/src/api/auth.ts"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "/backend/src/api/users.ts"
    },
    {
      "src": "/api/agenda/(.*)",
      "dest": "/backend/src/api/agenda.ts"
    },
    {
      "src": "/api/health/(.*)",
      "dest": "/backend/src/api/health.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
